            <field name="model">gdpr.restrict_method</field>
            <field name="arch" type="xml">
                <form string="GDPR Restrict Method">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <sheet>
                        <group>
                            <field name="description"/>
                            <field name="type"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
